<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:padding="16dp">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/display_card"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/display_bg">
        <TextView
            android:id="@+id/calculator_display"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/calculator_display_default"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="end|center_vertical"
            android:textColor="@color/display_text"
            android:padding="20dp"
            android:maxLines="2"
            android:ellipsize="start" />
    </com.google.android.material.card.MaterialCardView>


    <GridLayout
        android:id="@+id/calculator_grid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:rowCount="5"
        android:columnCount="4"
        app:layout_constraintTop_toBottomOf="@id/display_card"
    app:layout_constraintBottom_toTopOf="@id/footer_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Row 1 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_clear"
            android:text="@string/calculator_clear"
            style="@style/Widget.MaterialComponents.Button"
            android:textColor="@color/clear_text"
            android:backgroundTint="@color/clear_bg"
            android:textSize="20sp"
            app:cornerRadius="16dp"
            android:layout_margin="6dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_divide"
            android:text="@string/calculator_divide"
            style="@style/Widget.MaterialComponents.Button"
            android:textColor="@color/operator_text"
            android:backgroundTint="@color/operator_bg"
            android:textSize="20sp"
            app:cornerRadius="16dp"
            android:layout_margin="6dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_multiply"
            android:text="@string/calculator_multiply"
            style="@style/Widget.MaterialComponents.Button"
            android:textColor="@color/operator_text"
            android:backgroundTint="@color/operator_bg"
            android:textSize="20sp"
            app:cornerRadius="16dp"
            android:layout_margin="6dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_delete"
            android:text="@string/calculator_delete"
            style="@style/Widget.MaterialComponents.Button"
            android:textColor="@color/clear_text"
            android:backgroundTint="@color/clear_bg"
            android:textSize="20sp"
            app:cornerRadius="16dp"
            android:layout_margin="6dp" />

        <!-- Row 2 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_7"
            android:text="@string/calculator_7"
            style="@style/Widget.MaterialComponents.Button"
            android:textColor="@color/button_text"
            android:backgroundTint="@color/button_bg"
            android:textSize="20sp"
            app:cornerRadius="16dp"
            android:layout_margin="6dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_8"
            android:text="@string/calculator_8"
            style="@style/Widget.MaterialComponents.Button"
            android:textColor="@color/button_text"
            android:backgroundTint="@color/button_bg"
            android:textSize="20sp"
            app:cornerRadius="16dp"
            android:layout_margin="6dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_9"
            android:text="@string/calculator_9"
            style="@style/Widget.MaterialComponents.Button"
            android:textColor="@color/button_text"
            android:backgroundTint="@color/button_bg"
            android:textSize="20sp"
            app:cornerRadius="16dp"
            android:layout_margin="6dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_subtract"
            android:text="@string/calculator_subtract"
            style="@style/Widget.MaterialComponents.Button"
            android:textColor="@color/operator_text"
            android:backgroundTint="@color/operator_bg"
            android:textSize="20sp"
            app:cornerRadius="16dp"
            android:layout_margin="6dp" />

        <!-- Row 3 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_4"
            android:text="@string/calculator_4"
            style="@style/Widget.MaterialComponents.Button"
            android:textColor="@color/button_text"
            android:backgroundTint="@color/button_bg"
            android:textSize="20sp"
            app:cornerRadius="16dp"
            android:layout_margin="6dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_5"
            android:text="@string/calculator_5"
            style="@style/Widget.MaterialComponents.Button"
            android:textColor="@color/button_text"
            android:backgroundTint="@color/button_bg"
            android:textSize="20sp"
            app:cornerRadius="16dp"
            android:layout_margin="6dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_6"
            android:text="@string/calculator_6"
            style="@style/Widget.MaterialComponents.Button"
            android:textColor="@color/button_text"
            android:backgroundTint="@color/button_bg"
            android:textSize="20sp"
            app:cornerRadius="16dp"
            android:layout_margin="6dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add"
            android:text="@string/calculator_add"
            style="@style/Widget.MaterialComponents.Button"
            android:textColor="@color/operator_text"
            android:backgroundTint="@color/operator_bg"
            android:textSize="20sp"
            app:cornerRadius="16dp"
            android:layout_margin="6dp" />

        <!-- Row 4 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_1"
            android:text="@string/calculator_1"
            style="@style/Widget.MaterialComponents.Button"
            android:textColor="@color/button_text"
            android:backgroundTint="@color/button_bg"
            android:textSize="20sp"
            app:cornerRadius="16dp"
            android:layout_margin="6dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_2"
            android:text="@string/calculator_2"
            style="@style/Widget.MaterialComponents.Button"
            android:textColor="@color/button_text"
            android:backgroundTint="@color/button_bg"
            android:textSize="20sp"
            app:cornerRadius="16dp"
            android:layout_margin="6dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_3"
            android:text="@string/calculator_3"
            style="@style/Widget.MaterialComponents.Button"
            android:textColor="@color/button_text"
            android:backgroundTint="@color/button_bg"
            android:textSize="20sp"
            app:cornerRadius="16dp"
            android:layout_margin="6dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_equals"
            android:text="@string/calculator_equals"
            style="@style/Widget.MaterialComponents.Button"
            android:textColor="@color/equals_text"
            android:backgroundTint="@color/equals_bg"
            android:textSize="20sp"
            app:cornerRadius="16dp"
            android:layout_margin="6dp" />

        <!-- Row 5 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_0"
            android:text="@string/calculator_0"
            style="@style/Widget.MaterialComponents.Button"
            android:textColor="@color/button_text"
            android:backgroundTint="@color/button_bg"
            android:textSize="20sp"
            app:cornerRadius="16dp"
            android:layout_margin="6dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_dot"
            android:text="@string/calculator_dot"
            style="@style/Widget.MaterialComponents.Button"
            android:textColor="@color/button_text"
            android:backgroundTint="@color/button_bg"
            android:textSize="20sp"
            app:cornerRadius="16dp"
            android:layout_margin="6dp" />
        <View android:layout_width="0dp" android:layout_height="0dp" />
        <View android:layout_width="0dp" android:layout_height="0dp" />

        </GridLayout>

    <TextView
        android:id="@+id/footer_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
    android:text="@string/footer_label"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
